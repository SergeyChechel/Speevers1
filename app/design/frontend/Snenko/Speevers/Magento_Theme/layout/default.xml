<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.container">
            <container name="header.speever.wrapper" htmlClass="header-container" htmlTag="div" before="-">
                <block class="Magento\Theme\Block\Html\Header" name="header.speever" template="Magento_Theme::html/header/sp-header.phtml" />
            </container>
            <block class="Magento\Theme\Block\Html\Header\Logo" name="sp-hamburger-menu" template="Magento_Theme::html/header/hamburger-menu.phtml" after="navigation.sections" />
        </referenceContainer>

        <move element="header.panel" destination="header-wrapper" after="header.speever.wrapper"/>
        <move element="top.search" destination="header.panel" after="top.links"/>
        <move element="navigation.sections" destination="header.container" after="-"/>
        <move element="minicart" destination="header-wrapper" after="-" />

        <referenceBlock name="top.links">
            <referenceBlock name="catalog.compare.link" remove="true" />
            <referenceBlock name="header" remove="true" />
            <referenceBlock name="advanced-search-link" remove="true"/>
        </referenceBlock>

        <move element="my-account-link" destination="top.links" after="wish-list-link"/>

        <referenceBlock name="register-link">
            <arguments>
                <argument name="label" xsi:type="string" translate="true">REGISTER</argument>
            </arguments>
        </referenceBlock>

        <!-- Устанавливаем футер -->
        <referenceContainer name="footer-container">
            <container name="footer" as="footer" before="footer" label="Speevers Footer Container" htmlTag="div" htmlClass="site-footer">
                <container name="speevers-footer-container" label="Speevers Footer Wrapper" htmlTag="div" htmlClass="footer-container">
                    <block class="Magento\Theme\Block\Html\Footer" name="speevers-footer-logo" template="Magento_Theme::html/footer/logo-footer-part.phtml" before="-"/>
                    <container name="speevers-footer-content" label="Speevers Footer Wrapper" htmlTag="div" htmlClass="footer-content">
                        <block class="Magento\Theme\Block\Html\Footer" name="footer-content-contact" template="Magento_Theme::html/footer/content-footer-contact.phtml" before="-"/>
                        <block class="Magento\Theme\Block\Html\Footer" name="footer-content-service" template="Magento_Theme::html/footer/content-footer-service.phtml" after="footer-content-contact"/>
                        <block class="Magento\Theme\Block\Html\Footer" name="footer-content-links" template="Magento_Theme::html/footer/content-footer-links.phtml" after="footer-content-service"/>
                        <block class="Magento\Theme\Block\Html\Footer" name="footer-content-contact-2" template="Magento_Theme::html/footer/content-footer-contact.phtml" after="footer-content-links"/>
                        <block class="Magento\Theme\Block\Html\Footer" name="speevers-footer-socials" template="Magento_Theme::html/footer/content-footer-socials.phtml" after="-"/>
                    </container>
                    <block class="Magento\Theme\Block\Html\Footer" name="speevers-footer-bottom" template="Magento_Theme::html/footer/bottom-footer-part.phtml" after="speevers-footer-content"/>
                </container>
            </container>
        </referenceContainer>

    </body>
</page>
